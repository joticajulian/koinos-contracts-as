{
  "name": "token",
  "version": "0.1.0",
  "license": "MIT",
  "dependencies": {
    "koilib": "^5.1.0",
    "koinos-precompiler-as": "^0.1.2",
    "patch-package": "^6.4.7",
    "postinstall-postinstall": "^2.1.0"
  },
  "devDependencies": {
    "@as-covers/core": "^0.2.1",
    "@as-pect/cli": "^6.2.4",
    "@koinos/mock-vm": "^0.4.2",
    "@koinos/sdk-as": "^0.4.3",
    "@roaminroe/protoc": "^2.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "as-proto": "^0.4.0",
    "assemblyscript": "^0.19.22",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.2",
    "eslint": "^8.7.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "yaml": "^2.0.0-11"
  },
  "scripts": {
    "asbuild:debug": "asc build/index.ts --target debug",
    "asbuild:release": "asc build/index.ts --target release",
    "build": "yarn precompile && yarn proto && yarn asbuild:release",
    "lint": "eslint --max-warnings 0 --ext ts \"*/assembly/**/*.ts\"",
    "precompile": "koinos-precompiler-as .",
    "proto": "copyfiles -u 2 build/proto/*.ts assembly/proto",
    "deploy": "ts-node scripts/deployment.ts",
    "postinstall": "patch-package",
    "test": "asp --verbose --config as-pect.config.js"
  }
}
